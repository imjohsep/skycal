{
  "name": "skycal",
  "version": "0.0.1",
  "description": "Calendar app of astronomical events.",
  "private": true,
  "author": "Joseph Watters",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/imjohspe/skycal.git"
  },
  "main": "index.js",
  "scripts": {
    "test": "better-npm-run test",
    "test:cov": "better-npm-run test:cov",
    "start": "better-npm-run start",
    "build:start": "better-npm-run build:start",
    "build": "rimraf dist && better-npm-run build",
    "release": "npm run check-style && npm run test && npm run build && rimraf gh-pages && mkdir gh-pages && cd gh-pages && cp -r ../dist/* . && git init . && git remote add origin git@github.com:vesparny/react-kickstart.git && git checkout -b gh-pages && git add . && git commit -m 'publishing' && git push origin gh-pages -f",
    "lint": "standard",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "c": "git-cz"
  },
  "standard": {
    "globals": [
      "__DEV__"
    ],
    "plugins": [
      "react"
    ],
    "rules": {
      "react/jsx-no-bind": 2,
      "react/no-did-update-set-state": 2,
      "react/no-unknown-property": 2,
      "react/prop-types": 2
    }
  },
  "betterScripts": {
    "start": {
      "command": "node devServer",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build:start": {
      "command": "node prodServer",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build": {
      "command": "webpack --config webpack.config.prod.js --progress --profile --colors",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "test": {
      "command": "babel-node ./test/index.js",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "test:cov": {
      "command": "babel-node ./node_modules/.bin/isparta cover test/index.js",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "dependencies": {
    "fastclick": "^1.0.6",
    "jquery": "^2.2.1",
    "mongoose": "^4.4.7",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-router": "^2.0.0",
    "better-npm-run": "0.0.7"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.3",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "basscss": "^8.0.0",
    "commitizen": "^2.5.0",
    "connect-history-api-fallback": "^1.1.0",
    "conventional-changelog-cli": "^1.1.1",
    "css-loader": "^0.23.1",
    "css-modules-require-hook": "^2.1.0",
    "express": "^4.13.4",
    "extract-text-webpack-plugin": "^1.0.1",
    "glob": "^7.0.0",
    "html-webpack-plugin": "^2.9.0",
    "isparta": "^4.0.0",
    "jsdom": "^8.0.4",
    "json-loader": "^0.5.4",
    "lodash": "^4.5.0",
    "node-sass": "^3.4.2",
    "normalize.css": "^3.0.3",
    "postcss-loader": "^0.8.1",
    "postcss-modules-values": "^1.1.1",
    "rb-conventional-changelog": "^1.1.9",
    "react-addons-test-utils": "^0.14.7",
    "react-transform-catch-errors": "^1.0.2",
    "react-transform-hmr": "^1.0.2",
    "redbox-react": "^1.2.2",
    "rimraf": "^2.5.2",
    "sass-loader": "^3.2.0",
    "sinon": "^1.17.3",
    "standard": "^6.0.7",
    "stats-webpack-plugin": "^0.3.0",
    "style-loader": "^0.13.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.4.0",
    "webpack": "^1.12.13",
    "webpack-dev-middleware": "^1.5.1",
    "webpack-hot-middleware": "^2.7.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/rb-conventional-changelog"
    }
  }
}
